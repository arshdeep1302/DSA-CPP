#include <iostream>
#include <vector>
using namespace std;

/*
    Function: isSorted
    ------------------
    Checks whether the array is sorted in non-decreasing order using recursion.

    Time Complexity: O(n)
    Space Complexity: O(n)  // recursive call stack
*/
bool isSorted(const vector<int>& arr, int n) {
    // Base case: array of size 0 or 1 is always sorted
    if (n <= 1)
        return true;

    // Check last two elements and recurse
    return (arr[n - 1] >= arr[n - 2]) && isSorted(arr, n - 1);
}

int main() {
    vector<int> arr = {1, 2, 3, 4, 5};
    int n = arr.size();

    cout << isSorted(arr, n);
    return 0;
}
